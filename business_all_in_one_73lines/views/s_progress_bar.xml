                                         data-nonactive="#ECF0F1"
                                         class="progress_content bg-primary"></div>
                                </div>
                            </div>
                        </section>

                        <section id="progress-bar4" class="progress_bars">
                            <div class="progress_bar">
                                <div class="progress_title">
                                    <h4>Section</h4>
                                </div>
                                <span class="progress_number" contentEditable="False" style="opacity: 1;"><span
                                        class="progress_bar_1">30</span>%
                                </span>
                                <div class="progress_content_outer">
                                    <div data-percentage="50" data-active="text-primary"
                                         data-nonactive="#ECF0F1"
                                         class="progress_content bg-primary"></div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </section>
    </template>
    <!-- Snippet options -->
    <template id="s_progress_bar_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='background']" position="before">
            <div data-js='js_progress_bar'
                 data-selector=".progress_bars">
                <li data-progress_opt="">
                    <a><i class="fa fa-fw fa-cog"/>Block Setting
                    </a>
                </li>
            </div>
        </xpath>
    </template>
</odoo>
